<section>
  <div class="container">
    <div class="columns">
      <div class="column is-12">
        <div class="box is-fullwidth datapanel primary">
          <div class="level">
            <div class="level-left">
              <h1 class="title"><b>Overview: <%= @developer.github_user.name ? @developer.github_user.name : @developer.github_user.login %></b></h1>
            </div>
            <div class="level-right">
              <div class="control">
                <%= link_to team_path(@team), class: "button is-primary is-outlined" do %>
                  <span class="icon"><i class="fa fa-chevron-left"></i></span><span>  <%= @team.name %></span>
                <% end %>
                <% if owner? @team %>
                <%= link_to [@team, @developer], method: :delete, class: "button is-danger", data: { confirm: "Are you sure?" } do %>
                  <span class="icon"><i class="fa fa-trash"></i></span><span>  Remove</span>
                <% end %>
                <%= link_to edit_team_developer_path([@team, @developer]), class: "button is-primary" do %>
                  <span class="icon"><i class="fa fa-edit"></i></span><span>  Edit</span>
                <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<br>
<section>
  <div class="container">
    <%= render @developer.github_user %>
  </div>
</section>
<br>
<section>
  <div class="columns is-multiline">
    <% if !@recent_tweets.nil? %>
      <%= render 'datapanels/twitter', object: @recent_tweets %>
    <% elsif logged_in? && owner?(@team) %>
     <%= render 'datapanels/twitter_add' %>
    <% end %>

    <% if !@recent_stories.nil? %>
      <%= render 'datapanels/medium', object: @recent_stories %>
    <% elsif logged_in? && owner?(@team) %>
      <%= render 'datapanels/medium_add' %>
    <% end %>
  </div>
</section>
<br>
<br>
<section>
  <div class="container has-text-centered">
    <% if !@developer.resume_link.nil? %>
      <%= link_to "Get Resume", @developer.resume_link, class: "button is-primary is-large", target: "_blank" %>
    <% elsif owner? @team %>
      <%= render 'datapanels/resume_add' %>
    <% end %>
  </div>
</section>
