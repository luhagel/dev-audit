<div class="container">
  <section>
    <div class="columns">
      <div class="column is-12">
        <div class="is-fullwidth">
          <div class="level">
            <div class="level-left">
              <h1 class="title"><b>Overview: <%= @developer.github_user.name ? @developer.github_user.name : @developer.github_user.login %></b></h1>
            </div>
            <div class="level-right">
              <div class="control">
                <%= link_to team_path(@team), class: "button is-primary is-outlined" do %>
                  <span class="icon"><i class="fa fa-chevron-left"></i></span><span>  <%= @team.name %></span>
                <% end %>
                <% if owner? @team %>
                  <%= link_to [@team, @developer], method: :delete, class: "button is-danger", data: { confirm: "Are you sure?" } do %>
                    <span class="icon"><i class="fa fa-trash"></i></span><span>  Remove</span>
                  <% end %>
                  <%= link_to edit_team_developer_path([@team, @developer]), class: "button is-primary" do %>
                    <span class="icon"><i class="fa fa-edit"></i></span><span>  Edit</span>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <br>
  <section>
    <div class="columns">
      <div class="column is-12 has-text-centered">
        <% if !@developer.bio.nil? %>
          <%= render 'datapanels/bio/show' %>
        <% elsif owner? @team %>
          <%= render 'datapanels/bio/add' %>
        <% end %>
      </div>
    </div>
  </section>
  <br>
  <section>
    <div class="columns">
      <div class="column is-12 has-text-centered">
        <% if !@developer.instructor_recommendation.nil? %>
          <%= render 'datapanels/instructor/show' %>
        <% elsif owner? @team %>
          <%= render 'datapanels/instructor/add' %>
        <% end %>
      </div>
    </div>
  </section>
  <br>
  <section>
    <div class="columns">
      <div class="column is-12">
        <%= render @developer.github_user %>
      </div>
    </div>
  </section>
  <br>
  <section>
    <div class="columns">
      <div class="column is-12 has-text-centered">
        <% if !@developer.resume_link.nil? %>
          <%= render 'datapanels/resume/show' %>
        <% elsif owner? @team %>
          <%= render 'datapanels/resume/add' %>
        <% end %>
      </div>
    </div>
  </section>
</div>
