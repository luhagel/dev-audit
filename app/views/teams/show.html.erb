<div class="columns">
  <% @developers.each do |dev| %>
    <div class="column">
    <%= link_to [@team, dev] do %>
      <div class="card">
        <header class="card-header">
          <p class="card-header-title"><%= dev.name %></p>
        </header>
        <div class="card-content">
          <%== dev.git_graph_html %>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
<% if @developers.count == 0 %>
<div class="columns">
  <div class="column">
    <div class="card is-fullwidth">
      <div class="card-content">
        <h4 class="has-text-centered">There is nothing here yet!</h4>
        <% if logged_in? %>
          <p class="has-text-centered">Start by adding your first develper below!</p>
        <% else %>
          <p class="has-text-centered">The team owner hasn't added any developers yet, check back later!</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% if logged_in? %>
  <div class="columns">
    <div class="column">
      <%= link_to 'Add', new_team_developer_path(@team), class: "button" %>
    </div>
  </div>
<% end %>