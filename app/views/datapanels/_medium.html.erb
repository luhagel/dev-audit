<div class="column is-6">
  <div class="box is-fullwidth datapanel medium">
    <header class="level">
    <div class="level-left">
      <p class="">
        <span class="icon has-medium-text"><i class="fa fa-medium"></i></span> @<%= @developer.username %>
      </p>
    </div>
    <div class="level-right">
    </div>
  </header>
  <hr>
  <nav class="level is-mobile">
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Posts</p>
        <p class="title"><%= @recent_stories[:user][:total_posts] %></p>
      </div>
    </div>
  </nav>
  <% @recent_stories[:posts].each do |post| %>
    <%= render partial: 'datapanels/publication', locals: { :p => post } %>
  <% end %>

  <div class="level">
      <div class="level-item has-text-centered">
        <a href="https://medium.com/@<%= @developer.username %>" target=_blank class="button is-primary is-outlined has-medium-text">Go to Medium Profile</a>
      </div>
    </div>
  </div>
</div>
