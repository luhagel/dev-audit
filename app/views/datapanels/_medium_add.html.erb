<div class="column is-6">
  <div class="box is-fullwidth datapanel medium">
    <header class="level">
    <div class="level-left">
      <p class="title is-5">
        <span class="icon has-medium-text"><i class="fa fa-medium"></i></span> Couldn't find <%= @developer.github_user.name %> on Medium, add his/her username below!
      </p>
    </div>
    <div class="level-right">
    </div>
    </header>
    <hr>
    <div class="box">
      <label for="medium" class="label">Medium Username:</label>
      <input type="text" name="medium" class="input">
    </div>

    <div class="level">
      <div class="level-item has-text-centered">
        <a href="https://medium.com/@<%= @developer.username %>" target=_blank class="button is-primary is-outlined has-medium-text is-disabled">Submit</a>
      </div>
    </div>
  </div>
</div>
